<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LabelBackgroundStyle">
        <item name="android:background">@color/white</item> <!-- Background color -->
    </style>
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="android:textColorHint">@color/white</item>
    </style>
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#fff</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>
    <style name="Theme.RemoveSplashScreenTheme" parent="@style/Base.Theme.Tanify">
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="WeatherCardProgressBarStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/white</item>
    </style>
    <style name="CustomShapeOverlay">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">100dp</item>
    </style>
</resources>