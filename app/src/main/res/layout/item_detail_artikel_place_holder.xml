<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="24dp"
    android:orientation="vertical">

    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:layout_width="match_parent"
        android:layout_height="212dp"
        app:cardCornerRadius="30dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/grey" />

    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:layout_width="310dp"
        android:layout_height="20dp"
        app:cardCornerRadius="0dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/grey"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <com.google.android.material.circularreveal.cardview.CircularRevealCardView
            android:id="@+id/profile1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:backgroundTint="@color/grey"
            app:cardCornerRadius="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/profile1"
            app:layout_constraintStart_toEndOf="@+id/profile1"
            app:layout_constraintTop_toTopOf="@+id/profile1">

            <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                android:layout_width="50dp"
                android:layout_height="10dp"
                android:layout_marginStart="12dp"
                android:backgroundTint="@color/grey"
                app:cardCornerRadius="0dp" />

            <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                android:layout_width="90dp"
                android:layout_height="10dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/grey"
                app:cardCornerRadius="0dp" />

        </LinearLayout>

        <com.google.android.material.circularreveal.cardview.CircularRevealCardView
            android:id="@+id/fitur1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/grey"
            app:cardCornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.circularreveal.cardview.CircularRevealCardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/grey"
            app:cardCornerRadius="0dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/fitur1"
            app:layout_constraintEnd_toStartOf="@id/fitur1"
            app:layout_constraintTop_toTopOf="@id/fitur1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/grey"
        app:cardCornerRadius="0dp" />

</LinearLayout>