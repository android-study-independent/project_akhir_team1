<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.lms.checklistMateri.CheckListMateriActivity">


        <ImageView
            android:id="@+id/iv_button_checklist"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_left__arrow_black"
            app:layout_constraintBottom_toBottomOf="@+id/iv_logo_checklist"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_logo_checklist"
            android:layout_width="160dp"
            android:layout_height="78dp"
            android:src="@drawable/logo_tanpa_tulisan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/iv_button_checklist"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_checklist"
            android:layout_width="326dp"
            android:layout_height="212dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="10dp"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_logo_checklist">

            <ImageView
                android:id="@+id/iv_content_checklist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/gambar_checklist"/>

            <TextView
                android:id="@+id/tv_konten_checklist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dasar-Dasar Pertanian Padi"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="16sp"
                android:textFontWeight="600"
                android:lineHeight="16dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_4section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 Section"
            app:layout_constraintStart_toStartOf="@+id/cv_checklist"
            app:layout_constraintTop_toBottomOf="@id/cv_checklist"
            android:layout_marginTop="19dp"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="12sp"
            android:textFontWeight="600"
            android:lineHeight="18dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_checklist_task"
        android:layout_width="327dp"
        android:layout_height="389dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_4section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>