<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:paddingTop="30dp"
    android:paddingHorizontal="24dp">
    
    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/card_current"
        android:layout_width="match_parent"
        android:layout_height="156dp"
        app:cardCornerRadius="8dp"
        android:background="@color/grey"
        android:backgroundTint="@color/grey"
        android:layout_marginTop="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/grey"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_current" />

    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/card_weekly1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardCornerRadius="8dp"
        android:background="@color/grey"
        android:backgroundTint="@color/grey"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/text2"/>

    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/card_weekly2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardCornerRadius="8dp"
        android:background="@color/grey"
        android:backgroundTint="@color/grey"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/card_weekly1"/>

    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/card_weekly3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardCornerRadius="8dp"
        android:background="@color/grey"
        android:backgroundTint="@color/grey"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/card_weekly2"/>

    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/card_weekly4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardCornerRadius="8dp"
        android:background="@color/grey"
        android:backgroundTint="@color/grey"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/card_weekly3"/>

    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/card_weekly5"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardCornerRadius="8dp"
        android:background="@color/grey"
        android:backgroundTint="@color/grey"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/card_weekly4"/>

    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/card_weekly6"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardCornerRadius="8dp"
        android:background="@color/grey"
        android:backgroundTint="@color/grey"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/card_weekly5"/>

</androidx.constraintlayout.widget.ConstraintLayout>