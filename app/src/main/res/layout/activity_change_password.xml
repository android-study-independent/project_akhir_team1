<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.bottomNav.profile.editProfile.ChangePasswordActivity">

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ubah_profil"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="18dp"
                android:src="@drawable/icon_left__arrow_black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="24dp">
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/password_lama"
                android:textStyle="bold"
                android:textColor="@color/primary_green"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:hintEnabled="false"
                app:boxStrokeWidth="0dp"
                android:background="@drawable/bg_edittext_slowgrey"
                app:endIconMode="password_toggle"
                style="@style/TextInputLayoutStyle">

                <com.example.tanify.custom.CustomEditText
                    android:id="@+id/ipt_passwordlama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:height="50dp"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="@string/hint_password_register"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/password_baru"
                android:textStyle="bold"
                android:textColor="@color/primary_green"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:hintEnabled="false"
                app:boxStrokeWidth="0dp"
                android:background="@drawable/bg_edittext_slowgrey"
                app:endIconMode="password_toggle"
                style="@style/TextInputLayoutStyle">

                <com.example.tanify.custom.CustomEditText
                    android:id="@+id/ipt_password_baru"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:height="50dp"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="@string/hint_password_register"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/masukan_konfirmasi_password"
                android:textStyle="bold"
                android:textColor="@color/primary_green"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:hintEnabled="false"
                app:boxStrokeWidth="0dp"
                app:endIconMode="password_toggle"
                android:background="@drawable/bg_edittext_slowgrey"
                style="@style/TextInputLayoutStyle">

                <com.example.tanify.custom.CustomEditText
                    android:id="@+id/ipt_konfirmasi_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:height="50dp"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="@string/hint_password_register"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.example.tanify.custom.CustomButtonFillGreen
                android:id="@+id/btn_simpan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="50dp"
                android:layout_marginTop="32dp"
                android:textAllCaps="false"
                android:text="@string/simpan"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_regular"
                android:textStyle="bold"/>

            <com.example.tanify.custom.CustomButtonStrokeGreen
                android:id="@+id/btn_batalkan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="50dp"
                android:layout_marginTop="12dp"
                android:textAllCaps="false"
                android:text="@string/batalkan"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_regular"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>